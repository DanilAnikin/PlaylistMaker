<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/other_screens_background_color"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        tools:context=".SearchActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_padding_horizontal"
            android:background="@drawable/rounded_edit_text"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/ic_search_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/hint_search"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@null"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:textColor="@color/yp_black"
                android:textColorHint="?attr/search_field_hint_text_color"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:textFontWeight="@integer/font_weight_400"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrackList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llPlaceHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_screen_placeholder_margin_top"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:src="@drawable/ic_nothing_found_placeholder" />

                    <TextView
                        android:id="@+id/tvPlaceholderMessage"
                        style="@style/SearchScreenPlaceholderText"
                        android:visibility="gone"
                        tools:text="@string/text_nothing_found" />

                    <TextView
                        android:id="@+id/tvPlaceholderAdditionalMessage"
                        style="@style/SearchScreenPlaceholderText"
                        android:visibility="gone"
                        tools:text="@string/connection_error_message" />

                    <Button
                        android:id="@+id/btnPlaceholderUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="?attr/search_screen_placeholder_items_color"
                        android:fontFamily="@font/ys_display_medium"
                        android:text="@string/update_btn_text"
                        android:textAllCaps="false"
                        android:textColor="?attr/search_screen_update_btn_text_color"
                        android:textFontWeight="@integer/font_weight_500"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cornerRadius="54dp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>