<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="40dp"
    android:paddingEnd="18dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_options_padding"
        android:paddingBottom="@dimen/settings_options_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/dark_theme_tv_text"
            android:textColor="@color/settings_options_text_color"
            android:textSize="@dimen/settings_options_text_size" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="@dimen/settings_options_icon_size"
            android:layout_gravity="end" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_options_padding"
        android:paddingBottom="@dimen/settings_options_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/share_app_tv_text"
            android:textColor="@color/settings_options_text_color"
            android:textSize="@dimen/settings_options_text_size" />

        <ImageView
            android:layout_width="@dimen/settings_options_icon_size"
            android:layout_height="@dimen/settings_options_icon_size"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_options_padding"
        android:paddingBottom="@dimen/settings_options_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/support_tv_text"
            android:textColor="@color/settings_options_text_color"
            android:textSize="@dimen/settings_options_text_size" />

        <ImageView
            android:layout_width="@dimen/settings_options_icon_size"
            android:layout_height="@dimen/settings_options_icon_size"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_options_padding"
        android:paddingBottom="@dimen/settings_options_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/terms_of_use_tv_text"
            android:textColor="@color/settings_options_text_color"
            android:textSize="@dimen/settings_options_text_size" />

        <ImageView
            android:layout_width="@dimen/settings_options_icon_size"
            android:layout_height="@dimen/settings_options_icon_size"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_terms_of_use" />

    </FrameLayout>

</LinearLayout>