<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_btn</item>
        <item name="android:layout_weight">1</item>
        <!--using app:backgroundTint instead of android:backgroundTint to use custom background with drawable, otherwise backgroundTint
         uses colorPrimary because it defined in MaterialButton style (also we can set btn color in drawable:
         <solid android:color="color"/> and here set app:backgroundTint to @null) -->
        <item name="backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_screen_btn_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/font_weight_500</item>
        <item name="android:background">@drawable/main_screen_btn_ripple</item>
    </style>

    <style name="SettingsScreenOptionsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/settings_options_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/layout_padding_horizontal</item>
        <item name="android:paddingEnd">18dp</item>
    </style>

    <style name="SettingsScreenOptionsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/settings_options_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/font_weight_400</item>
    </style>

    <style name="SettingsScreenOptionsImageView">
        <item name="android:layout_width">@dimen/settings_options_icon_size</item>
        <item name="android:layout_height">@dimen/settings_options_icon_size</item>
        <item name="android:layout_gravity">end</item>
    </style>

</resources>