<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_btn</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/nav_btn_text_color</item>
        <item name="android:textSize">@dimen/nav_btn_text_size</item>
        <item name="cornerRadius">@dimen/nav_btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/nav_btn_icon_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsScreenOptionsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_options_padding</item>
        <item name="android:paddingBottom">@dimen/settings_options_padding</item>
    </style>

    <style name="SettingsScreenOptionsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_options_text_color</item>
        <item name="android:textSize">@dimen/settings_options_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsScreenOptionsImageView">
        <item name="android:layout_width">@dimen/settings_options_icon_size</item>
        <item name="android:layout_height">@dimen/settings_options_icon_size</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MainScreenBackgroundColor">
        <item name="android:background">@color/main_screen_background_day</item>
    </style>

</resources>