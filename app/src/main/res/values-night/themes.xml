<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="main_screen_background_color">@color/yp_black</item>
        <item name="other_screens_background_color">@color/yp_black</item>
        <item name="toolbar_title_text_color">@color/yp_white</item>
        <item name="toolbar_icon_color">@color/yp_white</item>
        <item name="text_color">@color/yp_white</item>
        <item name="settings_options_icon_color">@color/yp_white</item>
        <item name="search_field_hint_text_color">@color/yp_black</item>
        <item name="search_field_background_color">@color/yp_white</item>
        <item name="search_field_icons_color">@color/yp_black</item>
        <item name="artist_name_text_color">@color/yp_white</item>
        <item name="search_screen_placeholder_items_color">@color/yp_white</item>
        <item name="search_screen_btn_text_color">@color/yp_black</item>
        <item name="audio_player_add_buttons_color">@color/audio_player_add_buttons_dark</item>
        <item name="play_btn_background_color">@color/yp_white</item>
        <item name="playback_control_icon_color">@color/yp_black</item>
    </style>
</resources>